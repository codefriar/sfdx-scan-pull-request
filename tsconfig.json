{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/*.ts"],
  "exclude": ["tests/**", "node_modules/**"]
}